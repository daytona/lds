{{#saveas "view"}}
<section class="{{prefix}}Helper js-view" id="Helper-{{name}}">
  <header>
    {{#if info}}
      {{{markdown info}}}
    {{else}}
      <h2>{{name}}</h2>
    {{/if}}
    {{#if config.version}}
      <span class="{{prefix}}Helper-versionTag">{{config.version}}</span>
    {{/if}}
  </header>
  <div class="Helper-content">
    {{#unless (isEmpty data)}}
      <div class="{{prefix}}Helper-code {{prefix}}Helper-code--data">
        <pre class="{{prefix}}code"><code class="js-data">{{{json data}}}</code></pre>
      </div>
    {{/unless}}
    {{#if config.schema}}
      <form class="{{prefix}}Form {{prefix}}Helper-editForm js-editForm">
        {{#each config.schema}}
          <label class="{{prefix}}Form-label {{prefix}}Helper-editLabel">
            {{@key}}:
            <select class="{{prefix}}Form-select {{prefix}}Helper-editField" name="{{@key}}">
              {{#each this}}
                <option value="{{#if value}}{{jsonLine value}}{{else}}{{this}}{{/if}}" {{#equals value (getProperty @view.data @../key)}} selected="selected"{{/equals}}{{#equals this (getProperty @view.data @../key)}} selected="selected"{{/equals}}>{{#if key}}{{key}}{{else}}{{.}}{{/if}}</option>
              {{/each}}
            </select>
          </label>
        {{/each}}
      </form>
    {{/if}}

  </div>
  <footer class="{{prefix}}Helper-footer">
    {{#if hbs.dependencies}}
    <strong>Dependencies</strong>
    <dl>
      <dt>Components</dt>
      {{#each hbs.dependencies}}
        <dd>{{.}}</dd>
      {{/each}}
    </dl>
    {{/if}}
  </footer>
</section>
{{/saveas}}
