<div style="display: none;">
  <form
    data-controller="DemoForm"
    data-id="{{id}}"
    class="{{prefix}}Form {{prefix}}DemoForm {{#if class}}{{class}}{{/if}}">
    {{#each schema}}
      <div class="DemoForm-item">

        <label class="{{prefix}}DemoForm-label {{prefix}}Form-label {{prefix}}Text-small">
          {{@key}}:
        </label>
        <select class="{{prefix}}DemoForm-input {{prefix}}SelectInput {{prefix}}Text-small" name="{{@key}}">
          {{#with (getProperty ../data @key)}}
            <option value="{{jsonLine this}}" selected="selected">{{#if (isString this)}}{{this}}{{else}}default{{/if}}</option>
          {{else}}
            <option value="{{toString (getProperty ../data @key)}}" selected="selected">{{toString (getProperty ../data @key)}}</option>
          {{/with}}

          {{#each this}}
            <option value="{{#if (hasProperty this 'value')}}{{jsonLine value}}{{else}}{{this}}{{/if}}">{{#if key}}{{key}}{{else}}{{.}}{{/if}}</option>
          {{/each}}
        </select>

      </div>
    {{/each}}
  </form>
</div>
